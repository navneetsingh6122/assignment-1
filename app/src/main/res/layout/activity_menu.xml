<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#005E4F4F"

        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="290dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/chocolate" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:text="Chocolate Shake"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:text="SinghShops's chocolate shake is a delicious chocolate dessert made with vanilla and chocolate syrup."
            android:textSize="11sp" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="95dp"
            android:text="530 Cal."
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="122dp"
        android:text="Quantity"

        android:textSize="15sp" />

        <Button
            android:id="@+id/Chocolate_Adding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="70dp"
            android:text="+" />

        <TextView
            android:id="@+id/chocolate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:text="$5.99"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chocolate_decreasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="120dp"
            android:text="-" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="173dp"
            android:layout_height="163dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/stawberry" />

        <TextView
            android:id="@+id/Stawberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:text="Stawberry Shake"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/StawberryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:text="SinghShops's Stawberry shake is made with creamy vanilla soft serve, blended with Stawberry syrup."
            android:textSize="11sp" />


        <TextView
            android:id="@+id/StawberryCals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="95dp"
            android:text="500 Cal."
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/chocolateView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="122dp"
            android:text="Quantity"

            android:textSize="15sp" />

        <Button
            android:id="@+id/stawberry_Adding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="70dp"
            android:text="+" />

        <TextView
            android:id="@+id/stawberry_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="140dp"
            android:text="0" />

        <TextView
            android:id="@+id/stawberry_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:text="$8.99"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stawberry_decreasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="120dp"
            android:text="-" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/vanilla" />

        <TextView
            android:id="@+id/Vanilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:text="Vanilla Shake"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />


        <TextView
            android:id="@+id/VanillaDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:text="SinghShops's Vanilla shake is made with creamy vanilla soft serve, topped with whipped topping for cool tasty treat."
            android:textSize="11sp" />


        <TextView
            android:id="@+id/VannilaCals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="95dp"
            android:text="490 Cal."
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Vannila_Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="122dp"
            android:text="Quantity"

            android:textSize="15sp" />

        <Button
            android:id="@+id/vanilla_Adding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="80dp"
            android:text="+" />

        <TextView
            android:id="@+id/vanilla_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/vanilla_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:text="$9.99"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vanilla_decreasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:text="-" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="checkout" />

</LinearLayout>